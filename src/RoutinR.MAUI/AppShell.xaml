<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RoutinR.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RoutinR.MAUI"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="RoutinR"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Jobs"
        ContentTemplate="{DataTemplate local:JobsPage}"
        Route="JobsPage" />
    <ShellContent
        Title="Job time sheet entries"
        ContentTemplate="{DataTemplate local:JobTimeSheetEntriesPage}"
        Route="JobTimeSheetEntriesPage" />
    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage" />

</Shell>
